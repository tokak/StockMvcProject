@using StockMvcProject.Models.Entity;
@model List<TBLURUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">

    <thead>
        <tr>
            <td>Id</td>
            <td>Ürün Adı</td>
            <td>Kategori</td>
            <td>Fiyat</td>
            <td>Marka</td>
            <td>Stok</td>
            <td>Sil</td>
            <td>Güncelle</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.URUNID</th>
                <td>@item.URUNAD</td>
                <td>@item.TBLKATEGORILER.KATEGORIAD</td>
                <td>@item.FIYAT</td>
                <td>@item.MARKA</td>
                <td>@item.STOK</td>
                <td><a href="/Urun/Sil/@item.URUNID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Urun/UrunGetir/@item.URUNID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }


    </tbody>
</table>

<a href="/Urun/UrunEkle" class="btn btn-primary">Yeni Ürün Ekle</a>

<script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/DataTables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />


<script>
    $("#tbl1").DataTable();
</script>